# ============================================================================
# 环境变量配置文件
# ============================================================================
# 使用方法：
# 1. 复制此文件为 .env
# 2. 填入实际配置值
# 3. source .env 或 export 变量
# ============================================================================

# ============================================================================
# 开发环境配置
# ============================================================================

# 开发集群连接配置
export DEV_KUBECONFIG_PATH="${HOME}/.kube/config"
export DEV_CONFIG_CONTEXT="dev.kubernetes.cluster"
export DEV_ENVIRONMENT="dev"
export DEV_NAMING_PREFIX="cloud-native"

# 开发环境 MetalLB 配置
export DEV_METALLB_IP_RANGES="192.168.40.150-192.168.40.160"

# 开发环境域名配置
export DEV_ARGOCD_DOMAIN="argocd.dev.example.com"
export DEV_MLFLOW_DOMAIN="mlflow.dev.example.com"

# 开发环境密码（仅用于开发）
export DEV_MINIO_SECRET_KEY="minioadmin"
export DEV_MLFLOW_PASSWORD="mlflow-password"
export DEV_ARGOCD_PASSWORD="argocd-password"

# ============================================================================
# 生产环境配置
# ============================================================================

# 生产集群连接配置
export PROD_KUBECONFIG_PATH="${HOME}/.kube/config"
export PROD_CONFIG_CONTEXT="prod.kubernetes.cluster"
export PROD_ENVIRONMENT="prod"
export PROD_COMPONENT="cloud-native"

# 生产环境 MetalLB 配置
export PROD_METALLB_IP_RANGES="192.168.40.200-192.168.40.250"

# 生产环境域名配置
export PROD_HARBOR_DOMAIN="harbor.example.com"
export PROD_KUBEFLOW_DOMAIN="kubeflow.example.com"
export PROD_MLFLOW_DOMAIN="mlflow.example.com"
export PROD_GITLAB_DOMAIN="gitlab.example.com"
export PROD_REGISTRY_DOMAIN="registry.example.com"
export PROD_ARGOCD_DOMAIN="argocd.example.com"

# 生产环境密码（请使用强密码）
export PROD_HARBOR_PASSWORD="HarborAdmin123!"
export PROD_MINIO_SECRET_KEY="MinIO-Secret-Key-1234!"
export PROD_NEUVECTOR_PASSWORD="NeuVectorAdmin123!"
export PROD_MLFLOW_PASSWORD="MLflowDBPassword123!"
export PROD_GITLAB_PASSWORD="GitLabRootPassword123!"
export PROD_ARGOCD_PASSWORD="ArgoCDAdminPassword123!"

# ============================================================================
# Terraform 配置
# ============================================================================

# Terraform 工作空间
export TF_VAR_kubeconfig_path="${HOME}/.kube/config"

# Terraform 版本锁定
export TF_PLUGIN_CACHE_DIR="${HOME}/.terraform.d/plugin-cache"

# Terraform 日志级别
export TF_LOG="INFO"

# ============================================================================
# 使用说明
# ============================================================================
#
# 1. 加载开发环境配置：
#    export DEV_CONFIG_CONTEXT="dev.kubernetes.cluster"
#    cd environments/dev
#    terraform apply
#
# 2. 加载生产环境配置：
#    export PROD_CONFIG_CONTEXT="prod.kubernetes.cluster"
#    cd environments/prod
#    terraform apply
#
# 3. 临时切换环境变量：
#    TF_VAR_config_context="prod.kubernetes.cluster" terraform apply
#
# 4. 永久设置环境变量：
#    echo 'export TF_VAR_config_context="prod.kubernetes.cluster"' >> ~/.bashrc
#    source ~/.bashrc
#
# ============================================================================
